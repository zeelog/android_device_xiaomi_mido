type hal_fingerprint_mido, domain, binder_in_vendor_violators;
hal_server_domain(hal_fingerprint_mido, hal_fingerprint)

type hal_fingerprint_mido_exec, exec_type, vendor_file_type, file_type;
binder_use(hal_fingerprint_mido)
init_daemon_domain(hal_fingerprint_mido)

allow hal_fingerprint_mido gx_fpd:binder { transfer call };
allow hal_fingerprint_mido gx_fpd_service:service_manager find;
allow hal_fingerprint_mido fingerprint_service:service_manager find;
allow hal_fingerprint_mido fpc_sysfs:file rw_file_perms;
allow hal_fingerprint_mido fpc_sysfs:dir rw_dir_perms;
allow hal_fingerprint_mido tee_device:chr_file rw_file_perms;
allow hal_fingerprint_mido uhid_device:chr_file rw_file_perms;
allow hal_fingerprint_mido fpc_data_file:dir rw_dir_perms;
allow hal_fingerprint_mido fpc_data_file:sock_file create_file_perms;
allow hal_fingerprint_mido servicemanager:binder { transfer call };

set_prop(hal_fingerprint_mido, system_prop)
r_dir_file(hal_fingerprint_mido, firmware_file)

add_service(hal_fingerprint_mido, hal_fingerprint_mido_service);

# Need to add auth tokens to KeyStore
use_keystore(hal_fingerprint_mido)
allow hal_fingerprint_mido keystore:keystore_key { add_auth };
# need to find KeyStore and add self
allow hal_fingerprint_mido hal_fingerprint_mido_service:service_manager { add find };

allow hal_fingerprint_mido keystore_service:service_manager find;

# For permissions checking
binder_call(hal_fingerprint_mido, system_server);
allow hal_fingerprint_mido permission_service:service_manager find;
